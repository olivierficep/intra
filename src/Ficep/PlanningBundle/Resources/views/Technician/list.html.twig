<!DOCTYPE html>

<html>
	<head>
		<title>Liste des techniciens</title>
	</head>
	<body>
		{% if app.session.flashbag.has('notice') %}
			{{ app.session.flashbag.get('notice')[0] }}
			<br />
		{% endif %}
		{% if page > 0 %}
			liste de techniciens
		{% endif %}
		{% for technician in technicians %}
			{% if page > 0 %}
				<br />
				{{ technician.name }} {{ technician.firstName }} {{ technician.email }} 
				<a href="{{ path('ficep_planning_deleteTechnician', {'id' : technician.id}) }}">remove</a> 
				<a href="{{ path('ficep_plannning_editTechnician', {'id' : technician.id}) }}">edit</a>
