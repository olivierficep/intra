			{% else %}
				affichage d√©tails technicien 
				<br />
				{{ technician.name }} 
				<br />
				{{ technician.firstName }} 
				<br />
				{{ technician.email }} 
			{% endif %}
		{% endfor %}
		
		{% if page > 0 %}
			{% for p in range(1, nbPages) %}
			<br />
			&nbsp;
			<a href="{{ path('ficep_planning_listTechnician', {'id' : 'all', 'page' : p })}}"> {{ p }}</a>
			
			{% endfor %}
		{% endif %}
	</body>
</html>